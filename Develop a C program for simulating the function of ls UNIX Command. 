#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>   

int main(int argc, char *argv[]) {
    DIR *dir;
    struct dirent *entry;
    char *path;

   
    if (argc < 2) {
        path = ".";
    } else {
        path = argv[1];
    }

    // Open directory
    dir = opendir(path);
    if (dir == NULL) {
        perror("opendir");
        exit(1);
    }

    printf("Listing files in directory: %s\n\n", path);

    
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

   
    closedir(dir);

    return 0;
}
