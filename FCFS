#include <stdio.h>

int main() {
    int n, i;
    int burst[20], wait[20], turnaround[20];
    float avg_wait = 0, avg_turnaround = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time:\n");
    for (i = 0; i < n; i++) {
        printf("P%d: ", i + 1);
        scanf("%d", &burst[i]);
    }

    wait[0] = 0;
    for (i = 1; i < n; i++)
        wait[i] = wait[i - 1] + burst[i - 1];

    for (i = 0; i < n; i++) {
        turnaround[i] = burst[i] + wait[i];
        avg_wait += wait[i];
        avg_turnaround += turnaround[i];
    }

    printf("\nProcess\tBurst\tWait\tTurnaround\n");
    for (i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\n", i + 1, burst[i], wait[i], turnaround[i]);

    printf("\nAverage Waiting Time: %.2f", avg_wait / n);
    printf("\nAverage Turnaround Time: %.2f\n", avg_turnaround / n);

    return 0;
}
