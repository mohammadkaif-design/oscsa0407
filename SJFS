#include <stdio.h>

int main() {
    int n,i,j,bt[20],wt[20],tat[20],p[20],t;
    float aw=0,at=0;
    printf("Enter number of processes: "); scanf("%d",&n);
    for(i=0;i<n;i++){printf("P%d: ",i+1);scanf("%d",&bt[i]);p[i]=i+1;}
    
    // sort by burst time
    for(i=0;i<n-1;i++)for(j=i+1;j<n;j++)if(bt[i]>bt[j]){
        t=bt[i];bt[i]=bt[j];bt[j]=t;
        t=p[i];p[i]=p[j];p[j]=t;
    }

    wt[0]=0;
    for(i=1;i<n;i++) wt[i]=wt[i-1]+bt[i-1];
    for(i=0;i<n;i++){tat[i]=bt[i]+wt[i];aw+=wt[i];at+=tat[i];}

    printf("\nProcess Burst Wait Turnaround\n");
    for(i=0;i<n;i++) printf("P%d\t%d\t%d\t%d\n",p[i],bt[i],wt[i],tat[i]);
    printf("\nAvg Waiting=%.2f Avg Turnaround=%.2f\n",aw/n,at/n);
}
