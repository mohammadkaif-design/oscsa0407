#include <stdio.h>
int main(){
    int files[50], i,start,len,j;
    for(i=0;i<50;i++) files[i]=0;

    while(1){
        printf("\nEnter starting block & length of file (-1 to stop): ");
        scanf("%d",&start);
        if(start==-1) break;
        scanf("%d",&len);
        int flag=0;
        for(j=start;j<start+len;j++) if(files[j]==1){ flag=1; break; }
        if(flag) printf("File cannot be allocated!\n");
        else {
            for(j=start;j<start+len;j++) files[j]=1;
            printf("File allocated from %d to %d\n",start,start+len-1);
        }
    }
    return 0;
}
