#include <stdio.h>

int main(){
    int n=3,m=3,i,j,k;
    int alloc[3][3]={{0,1,0},{2,0,0},{3,0,3}};
    int max[3][3]={{7,5,3},{3,2,2},{9,0,2}};
    int avail[3]={3,3,2},need[3][3],finish[3]={0},safe[3],ind=0;

    for(i=0;i<n;i++) for(j=0;j<m;j++) need[i][j]=max[i][j]-alloc[i][j];

    for(k=0;k<n;k++){
        for(i=0;i<n;i++){
            if(!finish[i]){
                int flag=1;
                for(j=0;j<m;j++) if(need[i][j]>avail[j]) flag=0;
                if(flag){ for(j=0;j<m;j++) avail[j]+=alloc[i][j];
                    safe[ind++]=i; finish[i]=1; }
            }
        }
    }
    printf("Safe sequence: ");
    for(i=0;i<n;i++) printf("P%d ",safe[i]);
}
